{
    "name": "ronanchilvers/yze-roller-api",
    "description": "API Backend for YZE-Roller",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronan Chilvers",
            "email": "ronan@thelittledot.com"
        }
    ],
    "require": {
        "flightphp/core": "^3.18",
        "flightphp/container": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^13.0"
    },
    "autoload": {
        "psr-4": {
            "YZERoller\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YZERoller\\Api\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
      "serve": "cd web && /opt/homebrew/bin/php -S 127.0.0.1:8080",
      "test:mariadb": "php vendor/bin/phpunit --configuration phpunit.mariadb.xml"
    }
}
